{
    "include": ["./"],
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions":
    {
        "typeRoots":
        [
            "./node_modules/@types",
            "./@types"
        ],
        "skipLibCheck": true,
        "types": ["node"]
    },
    "ts-node":
    {
        "files":         true,
        "pretty":        true,
        "emit":          false,
        "transpileOnly": true,
        "preferTsExts":  true,
        "ignoreDiagnostics": [ ],
        "compilerOptions":
        {
            "types":
            [
            ],
            "skipLibCheck": true
        }
    }
}